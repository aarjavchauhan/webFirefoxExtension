{
  "description": "Web experience research",
  "manifest_version": 2,
  "name": "dotOrg",
  "version": "1.0",
  "icons": {
    "64": "icons/network-64.png"
  },

  "browser_action": {
    "default_icon": "icons/network-32.png",
    "default_title": "dotOrg",
    "default_popup": "popup/jfox_ui.html"
  },

  "permissions": [
  	"activeTab",
  	"history",
    "tabs",
    "storage",
    "downloads"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
