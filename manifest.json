{
  "description": "Demonstrating webRequests",
  "manifest_version": 2,
  "name": "jFox",
  "version": "1.0",
  "icons": {
    "48": "icons/beasts-48.png"
  },

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "lPhant",
    "default_popup": "popup/jfox_ui.html"
  },

  "permissions": [
  	"activeTab",
  	"history",
    "tabs",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"]
  }
}
